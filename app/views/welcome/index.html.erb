<div class="container">
  <div class="text-center">
    <div class="row">
      <h1>Would you rather...</h1>
    </div>
    <div class="row choices">
      <span id="left-choice"><%= @pair.left.text %></span>
      <span id="right-choice"><%= @pair.right.text %></span>
    </div>
    <div class="row">
      <button class="btn btn-info left-button"><span id="left-button-text"></span></button>
      <button class="btn btn-warning right-button"><span id="right-button-text"></span></button>
    </div>
  </div>
</div>